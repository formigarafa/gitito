<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", repositories_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_repository_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Repositories</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first"><%= t("activerecord.attributes.repository.name", :default => t("activerecord.labels.name", :default => "Name")) %>
          </th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @repositories.each do |repository| -%>
        <tr class="<%= cycle("odd", "even") %>">
                    <td>
            <%= repository.url %>
          </td>
          
          <td class="last">
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", repository_path(repository), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
