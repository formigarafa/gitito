<div class="block" id="block-login">
  <h2>Login Box</h2>
  <div class="content login">
    <div class="flash">&nbsp;
      <% flash.each do |type, message| %>
        <div class="message <%= type %>">
          <p><%= message %></p>
        </div>
      <% end %>
    </div>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form login"}) do |f| %>
      <div class="group wat-cf">
        <div class="left">
          <label class="label right">email</label>
        </div>
        <div class="right">
          <%= f.email_field :email, :class => :text_field %>
        </div>
      </div>
      
      <div class="group wat-cf">
        <div class="left">
          <label class="label right">password</label>
        </div>
        <div class="right">
          <%= f.password_field :password, :class => :text_field %>
        </div>
      </div>
      
      <% if devise_mapping.rememberable? -%>
        <div class="group wat-cf">
          <div class="right">
            <%= f.check_box :remember_me %> <%= f.label :remember_me %>
          </div>
        </div>
      <% end %>

      <div class="group navform wat-cf">
        <div class="right">
          <button class="button" type="submit">
            <img src="/images/web-app-theme/icons/key.png" alt="Save" /> Login
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render :partial => "devise/shared/links" %>
