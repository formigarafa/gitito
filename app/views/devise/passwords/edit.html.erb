<div class="flash">
    <div class="message notice">
        <%= devise_error_messages! %>
    </div>
</div>

<div class="block" id="block-login">
  <h2>Change your password</h2>
  <div class="content login">

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :put, :class => "form login"}) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="group wat-cf">
        <div class="left">
          <label class="label right">new password</label>
        </div>
        <div class="right">
          <%= f.email_field :password, :class => :text_field %>
        </div>
      </div>
      
      <div class="group wat-cf">
        <div class="left">
          <label class="label right">confirm new password</label>
        </div>
        <div class="right">
          <%= f.email_field :password_confirmation, :class => :text_field %>
        </div>
      </div>
      
      <div class="group navform wat-cf">
        <div class="right">
          <button class="button" type="submit">
            <img src="/images/web-app-theme/icons/key.png" alt="Save" /> Change my password
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render :partial => "devise/shared/links" %>


